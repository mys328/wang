<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
  http://www.springframework.org/schema/beans/spring-beans.xsd
  http://code.alibabatech.com/schema/dubbo
  http://code.alibabatech.com/schema/dubbo/dubbo.xsd
  ">
  
	<!-- 提供方应用信息，用于计算依赖关系 -->
	<dubbo:application name="service-fileupload-dubbo-provider" />

	<!-- 使用zookeeper注册中心暴露服务地址 -->
	<dubbo:registry address="zookeeper://${dubbo.registry.address}" file="../dubbo-registry/fileupload/dubbo-registry.properties"/>

	<!-- 用dubbo协议在20880端口暴露服务 -->
	<dubbo:protocol  name="dubbo"  port="-1"  />

	<!-- 声明需要暴露的服务接口 -->
	<dubbo:provider delay="-1" timeout="100000" retries="0" filter="dubboContextFilter" /><!-- 全局超时,重试机制 -->


	<dubbo:service interface="com.thinkwin.fileupload.service.FileUploadService" ref="fileUploadService" group="${group.scope}" version="${interface.version}" />

	<!--dubbo异步接口 异步无回调 ：async=true-->
	<dubbo:reference id="sysLogService" interface="com.thinkwin.log.service.SysLogService" check="false" group="${group.scope}" version="${interface.version}"/>
</beans>